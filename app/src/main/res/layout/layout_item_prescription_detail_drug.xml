<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_item_drug"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="@dimen/dp_10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="30dp"
        >

        <TextView
            android:id="@+id/tv_item_drug_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size18"
            android:textColor="@color/black"
            android:text="小儿多维元素片(小儿善存片)"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tv_item_drug_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tv_grey_e_solid_bg"
            android:text="规格:60片/瓶 30片/瓶 80片/瓶 120片/瓶 365片/瓶"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginBottom="5dp"
            android:textColor="@color/color_9"/>

        <TextView
            android:id="@+id/tv_item_drug_dosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用量 : 口服，一日1片"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size17"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_item_drug_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size17"
            android:gravity="right"
            android:textColor="@color/black"
            android:text="x2"/>


        <TextView
            android:id="@+id/tv_item_drug_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥49.5"
            android:textColor="@color/color_e64949"
            android:textSize="@dimen/text_size17"
            android:gravity="bottom"/>

    </LinearLayout>

</LinearLayout>