<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:paddingTop="15dp"
        android:background="@color/white">


        <ImageView
            android:id="@+id/iv_drug"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="@dimen/dp_10"/>

        <TextView
            android:id="@+id/tv_drug_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小儿多维元素片(小儿善存片)"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_size18"/>

        <TextView
            android:id="@+id/tv_drug_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="惠氏制药有限公司"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_size17"
            android:textColor="@color/color_9"/>

        <TextView
            android:id="@+id/tv_drug_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60片/瓶 30片/瓶 80片/瓶 120片/瓶 365片/瓶"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_size17"
            android:textColor="@color/color_9"/>

        <TextView
            android:id="@+id/tv_drug_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="49.5"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/color_e64949"
            android:textSize="@dimen/text_size17"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_item_drug_subtract"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="-"
                android:gravity="center"
                android:textColor="@color/color_38a234"
                android:textSize="@dimen/text_size22"
                android:paddingBottom="@dimen/dp_10"
                android:background="@drawable/shape_round_soild_bg"/>

            <TextView
                android:id="@+id/tv_item_drug_num"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/text_size16"
                android:text="1"/>


            <TextView
                android:id="@+id/tv_item_drug_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="+"
                android:paddingBottom="@dimen/dp_10"
                android:textSize="@dimen/text_size22"
                android:background="@drawable/shape_round_bg"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_drugs_tip_5"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_size17"
            android:textColor="@color/color_9"/>



        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size16"
                    android:textColor="@color/color_9"
                    android:layout_marginBottom="5dp"
                    android:text="@string/select_drugs_tip_6"/>
                <TextView
                    android:id="@+id/tv_drug_composition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ssssssssssssssss"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size17"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size16"
                    android:textColor="@color/color_9"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/select_drugs_tip_8"/>
                <TextView
                    android:id="@+id/tv_drug_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ssssssssssssssss"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size17"
                    />




            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height50"
            android:background="@drawable/shape_login_btn_bg"
            android:gravity="center"
            android:text="@string/select_drugs_tip_7"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size17" />

    </LinearLayout>


</LinearLayout>