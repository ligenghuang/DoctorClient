<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.mine.income.WithdrawalActivity">

    <include layout="@layout/layout_title_black_bar"/>
    
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@color/color_f5f6f8"
        android:fillViewport="true">
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height50"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:padding="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/withdrawal_tip_1"
                    android:textSize="@dimen/text_size17"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_income_amount"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_9"
                    android:textSize="@dimen/text_size16"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
              style="@style/user_line_2"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"/>

            <LinearLayout
                android:id="@+id/ll_withdrawal_amount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height50"
                android:background="@color/white"
                android:padding="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/withdrawal_tip_2"
                    android:textSize="@dimen/text_size17"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_withdrawal_amount"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_9"
                    android:textSize="@dimen/text_size16"
                    android:text="ï¿¥0"
                    android:layout_marginRight="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_more_right"
                    />

            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/item_height50"
                   android:text="@string/withdrawal_tip_3"
                   android:gravity="center_vertical"
                   android:layout_marginTop="@dimen/dp_10"
                   android:padding="@dimen/dp_10"
                   android:textSize="@dimen/text_size17"
                   android:textColor="@color/black"
                   android:background="@color/white"/>

               <View
                   style="@style/user_line_2"
                   android:paddingLeft="@dimen/dp_10"
                   android:paddingRight="@dimen/dp_10"/>


               <LinearLayout
                   android:id="@+id/ll_bank"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/item_height50"
                   android:orientation="horizontal"
                   android:background="@color/white"
                   android:gravity="center_vertical"
                   android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_bank_number"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:layout_height="wrap_content"
                        android:text="@string/withdrawal_tip_14"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_9"/>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:src="@drawable/icon_more_right"
                       />

               </LinearLayout>


           </LinearLayout>

            <TextView
                android:id="@+id/tv_withdrawal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height50"
                android:background="@drawable/shape_login_btn_bg"
                android:layout_marginTop="@dimen/item_height40"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size17"
                android:gravity="center"
                android:text="@string/withdrawal_tip_9"/>
            
        </LinearLayout>
        
        
    </android.support.v4.widget.NestedScrollView>



</LinearLayout>