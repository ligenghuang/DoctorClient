<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height70"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_item_drug_shop"
            android:layout_width="@dimen/item_height70"
            android:layout_height="@dimen/item_height70"
            android:layout_marginRight="@dimen/dp_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_item_drug_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小儿多维元素片(小儿善存片)"
                android:textSize="@dimen/text_size18"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_item_drug_spec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:textSize="@dimen/text_size18"
                android:textColor="@color/color_9"
                android:text="60片/瓶 30片/瓶 80片/瓶 120片/瓶 365片/瓶"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_item_drug_subtract"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="-"
                android:gravity="center"
                android:textColor="@color/color_38a234"
                android:textSize="@dimen/text_size22"
                android:paddingBottom="@dimen/dp_10"
                android:background="@drawable/shape_round_soild_bg"/>

            <TextView
                android:id="@+id/tv_item_drug_num"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/text_size16"
                android:text="1"/>


            <TextView
                android:id="@+id/tv_item_drug_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="+"
                android:paddingBottom="@dimen/dp_10"
                android:textSize="@dimen/text_size22"
                android:background="@drawable/shape_round_bg"/>

        </LinearLayout>


    </LinearLayout>


    <EditText
        android:id="@+id/et_item_drug_usage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/shape_tv_grey_bg"
        android:hint="@string/edit_prescription_tip_8"
        android:gravity="top"
        android:padding="@dimen/dp_10"
        android:maxLength="200"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size17"
        android:layout_marginTop="5dp"/>

</LinearLayout>