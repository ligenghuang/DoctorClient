<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.mine.BindMobileActivity">

    <include layout="@layout/layout_title_black_bar"/>

   <android.support.v4.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/color_f5f6f8"
       android:fillViewport="true">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:paddingTop="@dimen/dp_10"
           android:orientation="vertical">

           <EditText
               android:id="@+id/et_mobile"
               android:layout_width="match_parent"
               android:layout_height="@dimen/item_height50"
               android:background="@color/white"
               android:hint="@string/user_info_tip_19"
               android:textColorHint="@color/color_9"
               android:textColor="@color/black"
               android:textSize="@dimen/sp_16"
               android:layout_marginBottom="@dimen/dp_10"
               android:padding="@dimen/dp_10"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/item_height50"
               android:orientation="horizontal"
               android:background="@color/white">

               <EditText
                   android:id="@+id/tv_code"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:background="@color/transparent"
                   android:hint="@string/user_info_tip_20"
                   android:textColorHint="@color/color_9"
                   android:textColor="@color/black"
                   android:textSize="@dimen/sp_16"
                   android:padding="@dimen/dp_10"/>


               <TextView
                   android:id="@+id/tv_get_code"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:padding="@dimen/dp_10"
                   android:textSize="@dimen/text_size17"
                   android:textColor="@color/color_38a234"
                   android:text="@string/user_info_tip_21"/>

           </LinearLayout>

           <TextView
               android:id="@+id/tv_bind"
               android:layout_width="match_parent"
               android:layout_height="@dimen/item_height50"
               android:background="@drawable/shape_login_btn_bg"
               android:textColor="@color/white"
               android:textSize="@dimen/text_size17"
               android:text="@string/user_info_tip_22"
               android:gravity="center"
               android:layout_margin="@dimen/dp_10"/>



       </LinearLayout>

   </android.support.v4.widget.NestedScrollView>


</LinearLayout>